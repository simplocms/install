echo /***********************************************************************/
call npm install node-sass
echo.

echo /***********************************************************************/
echo /* GULP - ADMIN                                                        */
echo /***********************************************************************/
call gulp
echo.

echo /***********************************************************************/
echo /* GULP - FONTS                                                        */
